
{
  "apps": [
    {
      "name": "sit-craft-frontend",
      "exec_mode": "fork_mode",
      "script": "./index.js",
      "env": {
        "NODE_ENV": "staging"
      },
      "env_staging": {
        "name": "frontend-staging",
        "NODE_ENV": "staging",
        "exec_mode": "cluster",
        "instances": 2
      },
      "env_production" : {
        "name": "frontend-production",
        "NODE_ENV": "production",
        "exec_mode": "cluster",
        "instances": "max"
      },
      "log_date_format"  : "YYYY-MM-DD HH:mm Z"
    }
  ]
}
